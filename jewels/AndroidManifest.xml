<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="cn.perfectgames.jewels" android:versionCode="9"
	android:versionName="1.2.2">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@style/CustomButton">
		<activity android:name="cn.perfectgames.jewels.activities.MainActivity"
			android:label="@string/app_name" android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="cn.perfectgames.jewels.activities.PlaygroundActivity"
			android:label="@string/app_name">
		</activity>
		<activity android:name="cn.perfectgames.jewels.activities.Preferences"
			android:label="@string/preferences_title">
		</activity>
		<activity android:name="cn.perfectgames.jewels.activities.AboutActivity"
			android:label="@string/common_about" android:screenOrientation="landscape">
		</activity>
		<activity android:name="cn.perfectgames.jewels.activities.HighScoreActivity"
			android:label="@string/common_about">
		</activity>
		<activity android:name="cn.perfectgames.jewels.activities.LocalRankActivity"
			android:label="@string/common_about">
		</activity>
		<activity android:name="cn.perfectgames.jewels.activities.WorldRankActivity"
			android:label="@string/common_about">
		</activity>
		<!-- The application's publisher ID assigned by AdMob -->
		<meta-data android:value="a14d70b38c4cc74" android:name="ADMOB_PUBLISHER_ID" />
		<!-- AdActivity definition -->

		<activity android:name="com.google.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation" />


		<meta-data android:value="true" android:name="ADMOB_ALLOW_LOCATION_FOR_ADS" />
	</application>
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest> 