<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical" android:padding="5dip">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center">
		<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/record_submit_input_name_title"/>
		<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/player_name"/>
		<CheckBox  android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/record_submit_global" android:id="@+id/submit_to_global"/>
	</LinearLayout>
</LinearLayout>
