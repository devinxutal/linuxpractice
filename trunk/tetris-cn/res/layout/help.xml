<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal">

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="left" android:padding="5dip">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:gravity="center">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="HOW TO PLAY"
					android:textColor="#FFFFEE99" android:textStyle="bold"
					android:textSize="20dip" android:padding="5dip" grapvity="left"></TextView>
			</LinearLayout>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFF99"
				android:text="Slide With Finger" android:padding="10dip"
				android:gravity="right" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="18dip" android:text="- Slide left and right to move the block."></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="18dip"
				android:text="- Slide up or tap the screen to rotate the block."></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="18dip" android:text="- Slide down to drop the block directly."></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFF99"
				android:text="Buttons On Screen" android:padding="10dip"
				android:gravity="right" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="18dip"
				android:text="- Click button on screen to control the blocks."></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="18dip" android:text="- Click UP button to rotate the block"></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="18dip" android:text="- Click DOWN button to drop the block."></TextView>

			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="18dip"
				android:text="- Some buttons can perform different actions according to your game option."></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFF99"
				android:text="Keyboard and Joy Stick" android:padding="10dip"
				android:gravity="right" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textColor="#FFFFFFFF"
				android:paddingLeft="18dip"
				android:text="- Control block with the direction keys and joy stick on your phone."></TextView>
<LinearLayout android:layout_height="fill_parent"  android:layout_width="fill_parent" android:gravity="center" android:orientation="vertical">
				<TextView android:textStyle="bold" android:padding="5dip" android:textColor="#FFFFEE99" android:text="WHAT'S NEW" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dip"></TextView>
			</LinearLayout>
			<TextView android:textStyle="bold" android:textColor="#FFAA99FF" android:text="* Hold button enabled" android:paddingBottom="3dip" android:paddingTop="3dip" android:layout_height="wrap_content" android:paddingLeft="10dip" android:layout_width="wrap_content" android:paddingRight="10dip"></TextView>
			<TextView android:textStyle="bold" android:textColor="#FFAA99FF" android:text="* Block moves following finger" android:paddingBottom="3dip" android:paddingTop="3dip" android:layout_height="wrap_content" android:paddingLeft="10dip" android:layout_width="wrap_content" android:paddingRight="10dip"></TextView>
			<TextView android:textStyle="bold" android:textColor="#FFAA99FF" android:text="* Control buttons become more intuitive and configurable" android:paddingBottom="3dip" android:paddingTop="3dip" android:layout_height="wrap_content" android:paddingLeft="10dip" android:layout_width="wrap_content" android:paddingRight="10dip"></TextView>
			<TextView android:textStyle="bold" android:padding="10dip" android:textColor="#FFFFFF99" android:text="Hold Button Enabled" android:gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
			<ImageView android:layout_height="wrap_content" android:scaleType="center" android:layout_width="fill_parent" android:src="@drawable/help_hold_button"></ImageView>
			<TextView android:textColor="#FFFFFFFF" android:text="Player can hold the falling block and swap for another block if it is not wanted. if the HOLD AREA contains no block, first block in NEXT queue will be placed in playground, otherwise the block previously held by HOLD AREA will be used." android:layout_height="wrap_content" android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			<TextView  android:textColor="#FFFFFFFF" android:text="To hold a block, just click the circle below text 'HOLD', or click hold button in landscape mode." android:layout_height="wrap_content" android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			<TextView android:textStyle="bold"  android:padding="10dip" android:textColor="#FFFFFF99" android:text="Block moves following finger" android:gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
			<TextView  android:textColor="#FFFFFFFF" android:text="Blocks can ether move one slot per finger flip, or move continusly following your finger (seems like the block is dragged by your finger). " android:layout_height="wrap_content" android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			<TextView  android:textColor="#FFAA99FF" android:text="These two options can be configured in game option: Control - Enable Drag Mode" android:layout_height="wrap_content" android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			<TextView android:textStyle="bold"  android:padding="10dip" android:textColor="#FFFFFF99" android:text="Control Buttons" android:gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
			<TextView  android:textColor="#FFFFFFFF" android:text="Icons for control buttons is refined and become more intuitive, and button's allocation is highly customizable now:" android:layout_height="wrap_content"  android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			<ImageView  android:layout_height="wrap_content" android:scaleType="center" android:paddingBottom="5dip" android:layout_width="fill_parent" android:src="@drawable/help_swap_button_1"></ImageView>
			<ImageView  android:layout_height="wrap_content" android:scaleType="center" android:layout_width="fill_parent" android:src="@drawable/help_swap_button_2"></ImageView>
			<TextView  android:textColor="#FFFFFFFF" android:text="Above images just show the button custimization in landscape mode, customize it as you like." android:layout_height="wrap_content" android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			<TextView  android:textColor="#FFAA99FF" android:text="These customizations can be performed in game option: Control in Landscape Mode" android:layout_height="wrap_content" android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			<LinearLayout
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="center_horizontal">
				<ImageView android:layout_height="40dip" android:layout_width="40dip" android:src="@drawable/arrow_down"></ImageView>
				<ImageView  android:layout_height="40dip"  android:layout_width="40dip" android:src="@drawable/arrow_direct_down"></ImageView>
				<ImageView android:layout_height="40dip" android:layout_width="40dip" android:src="@drawable/arrow_rotate"></ImageView>
			</LinearLayout>
			<TextView android:textColor="#FFFFFFFF" android:text="Above images just show the button custimization for central button in portrait mode. The action can be ether QUICK DOWN, DIRECT DOWN, or BLOCK ROTATE." android:layout_height="wrap_content" android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			<TextView  android:textColor="#FFFFFFFF" android:text="These customization can be performed in game option: Control in Portrait Mode" android:layout_height="wrap_content" android:paddingLeft="18dip" android:layout_width="wrap_content"></TextView>
			
		</LinearLayout>
	</ScrollView>
</LinearLayout>
