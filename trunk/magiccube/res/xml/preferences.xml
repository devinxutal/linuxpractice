<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/pref_cat_basic">
		<ListPreference android:title="@string/pref_ent_cubesize"
			android:summary="@string/pref_ent_cubesize_summary" android:key="cube_size"
			android:defaultValue="3" android:entries="@array/pref_ent_cubesize_entries"
			android:entryValues="@array/pref_ent_cubesize_values" />

		<ListPreference android:title="@string/pref_ent_shuffle_steps"
			android:summary="@string/pref_ent_shuffle_steps_summary" android:key="shuffle_steps"
			android:defaultValue="20" android:entries="@array/pref_ent_shuffle_steps_entries"
			android:entryValues="@array/pref_ent_shuffle_steps_values" />

		<ListPreference android:title="@string/pref_ent_rotation_interval"
			android:summary="@string/pref_ent_rotation_interval_summary"
			android:key="rotation_interval" android:defaultValue="500"
			android:entries="@array/pref_ent_rotation_interval_entries"
			android:entryValues="@array/pref_ent_rotation_interval_values" />

		<ListPreference android:title="@string/pref_ent_animation_speed"
			android:summary="@string/pref_ent_animation_speed_summary"
			android:key="animation_speed" android:defaultValue="400"
			android:entries="@array/pref_ent_animation_speed_entries"
			android:entryValues="@array/pref_ent_animation_speed_values" />
		<ListPreference android:title="@string/pref_ent_screen_orientation"
			android:summary="@string/pref_ent_screen_orientation_summary"
			android:key="screen_orientation" android:defaultValue="auto"
			android:entries="@array/pref_ent_screen_orientation_entries"
			android:entryValues="@array/pref_ent_screen_orientation_values" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/pref_cat_performance">
		<!--
			<ListPreference android:title="@string/pref_ent_rendermode"
			android:summary="@string/perf_ent_rendermode_summary"
			android:key="render_mode" android:defaultValue="1"
			android:entries="@array/pref_ent_rendermode_entries"
			android:entryValues="@array/pref_ent_rendermode_values" />
		-->
		<ListPreference android:title="@string/pref_ent_animation_quality"
			android:summary="@string/pref_ent_animation_quality_summary"
			android:key="animation_quality" android:defaultValue="2"
			android:entries="@array/pref_ent_animation_quality_entries"
			android:entryValues="@array/pref_ent_animation_quality_values" />

	</PreferenceCategory>
</PreferenceScreen>